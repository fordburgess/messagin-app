{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --prefix apps/web run dev",
    "dev:server": "npm --prefix apps/server run dev",
    "dev": "concurrently -k -n web,server -c blue,green \"npm run dev:web\" \"npm run dev:server\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
